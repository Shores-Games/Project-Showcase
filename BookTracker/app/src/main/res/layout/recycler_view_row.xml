<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_input_get" />

        <TextView
            android:id="@+id/bookID"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="1"
            android:inputType="number"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bookInfo"
            android:layout_width="77dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:hint="Author - Title"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/bookID"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/bookInfo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_book_empty" />

        <TextView
            android:id="@+id/bookNumber"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="4.5"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#FF0202"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bookImage"
            app:layout_constraintEnd_toEndOf="@+id/bookImage"
            app:layout_constraintStart_toStartOf="@+id/bookImage"
            app:layout_constraintTop_toTopOf="@+id/bookImage"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/spiceImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/bookImage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pepper_fill" />

        <TextView
            android:id="@+id/spiceNumber"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="5"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#F8DE05"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/spiceImage"
            app:layout_constraintEnd_toEndOf="@+id/spiceImage"
            app:layout_constraintStart_toStartOf="@+id/spiceImage"
            app:layout_constraintTop_toTopOf="@+id/spiceImage"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/heartImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/spiceImage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_heart_fill" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>